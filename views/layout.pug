doctype html
html(lang="es")
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet')
    // Font Awesome
    link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css', rel='stylesheet')
    // Custom CSS
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    // Navbar con Búsqueda
    nav.navbar.navbar-expand-lg.navbar-dark
      .container-fluid
        .row.w-100.align-items-center
          .col-md-3
            a.navbar-brand(href='/')
              i.fas.fa-dice.me-2
              | CASINO SEARCH
          .col-md-6
            .navbar-search
              .input-group
                input#searchInput.form-control(
                  type='text',
                  placeholder='Buscar: ruleta, blackjack, póker...',
                  aria-label='Buscar'
                )
                button#searchBtn.btn(type='button')
                  i.fas.fa-search.me-2
                  | BUSCAR
          .col-md-3.text-end
            ul.navbar-nav.ms-auto
              li.nav-item
                a.nav-link(href='#', onclick='showStats(); return false;')
                  i.fas.fa-chart-bar.me-1
                  | ESTADISTICAS
    
    // Main Content
    main.container-fluid.py-4
      block content
    
    // Footer
    footer.text-white.text-center.py-3.mt-5
      .container
        p.mb-0
          i.fas.fa-copyright.me-2
          | 2025 Casino Ontology Search - Sistema de Búsqueda Semántica
    
    // Bootstrap JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    // Custom JS
    script(src='/javascripts/app.js')
